{% extends 'layouts/base.njk' %}

{% block content %}
	{% include 'partials/header.njk' %}

	<div class="page-description">
		<div class="description">
			{{ content | safe }}
		</div>
	</div>

	<div class="page-content">
		{% if slug == "hirtshals" -%}
			{% set locationList = locations.hirtshals %}
		{%- endif %}
		{% if slug == "hanherred" -%}
			{% set locationList = locations.hanherred %}
		{%- endif %}
		{% include 'partials/location-list.njk' %}
	</div>

	{% include 'partials/footer.njk' %}

	{% include 'partials/site-intro.njk' %}

	<div class="page-background" style="background-image:url({{ backgroundImage | url }})"></div>

	<div class="overlay"></div>

	<audio loop>
		<source src="{{ '/assets/media/harbour.mp3' | url }}" type="audio/mpeg" />
	</audio>
{% endblock %}
